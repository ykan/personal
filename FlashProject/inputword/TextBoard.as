package  {	import flash.text.TextField;	import flash.text.TextFieldAutoSize;	import flash.display.MovieClip;	import flash.utils.Timer;	import flash.events.TimerEvent;		public class TextBoard extends MovieClip {		private var textField:TextField = new TextField();		private var timer:Timer = new Timer(100);		private var charArr:Array;		private var isStepIn:Boolean = false;		private var formerHeight:Number = 0;		public function TextBoard() {			textField.width = 100;			textField.multiline = true;			textField.wordWrap = true;			textField.autoSize = TextFieldAutoSize.LEFT;			addChild(textField);			timer.addEventListener(TimerEvent.TIMER,onTimer);		}				private function onTimer(e:TimerEvent):void{			if(!charArr.length){				timer.stop();				removeWords();				return;			}			if(isStepIn){				textField.appendText(charArr.shift());			}else{				charArr.pop();				textField.text = charArr.join('');			}			var currentHeight:Number = textField.height;			if(currentHeight != formerHeight){				textField.y = -currentHeight;				formerHeight = currentHeight;			}		}				public function putWords(str:String):void{			charArr = str.split('');			isStepIn = true;			timer.start();		}				public function removeWords():void{			charArr = textField.text.split('');			isStepIn = false;			timer.start();		}	}	}